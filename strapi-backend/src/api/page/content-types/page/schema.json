    "titre": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "contenu": {
      "type": "richtext",
      "required": true
    },
    "meta_description": {
      "type": "text",
      "maxLength": 160
    },
    "meta_title": {
      "type": "string",
      "maxLength": 60
    },
    "categorie": {
      "type": "enumeration",
      "enum": ["legales", "informations", "autres"],
