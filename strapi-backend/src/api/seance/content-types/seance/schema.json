{
  "kind": "collectionType",
  "collectionName": "seances",
  "info": {
    "singularName": "seance",
    "pluralName": "seances",
    "displayName": "Seance"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titre": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "danse": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::danse.danse"
    },
    "niveau": {
      "type": "enumeration",
      "enum": [
        "debutant",
        "intermediaire",
        "avance"
      ],
      "default": "debutant"
    },
    "horaire": {
      "type": "string",
      "required": true
    },
    "lieu": {
      "type": "string",
      "required": true
    },
    "jour_semaine": {
      "type": "enumeration",
      "enum": [
        "lundi",
        "mardi",
        "mercredi",
        "jeudi",
        "vendredi",
        "samedi",
        "dimanche"
      ],
      "default": "lundi"
    },
    "prix_mensuel": {
      "type": "decimal",
      "required": true
    },
    "professeur": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::professeur.professeur"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "description_longue": {
      "type": "richtext"
    }
  }
}
